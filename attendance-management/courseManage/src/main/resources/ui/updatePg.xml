<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import java.lang.Double?>

<GridPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="edu.duke.ece651.courseManage.controller.UpdateController">
  <columnConstraints>
    <ColumnConstraints percentWidth="50.0" />
    <ColumnConstraints percentWidth="50.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints percentHeight="10.0" />
    <RowConstraints percentHeight="15.0" />
    <RowConstraints percentHeight="15.0" />
    <RowConstraints percentHeight="15.0" />
    <RowConstraints percentHeight="15.0" />
    <RowConstraints percentHeight="15.0" />
    <RowConstraints percentHeight="15.0" />
  </rowConstraints>
  <Label text="Course Management System: Update Course Page" GridPane.rowIndex="0" GridPane.columnIndex="0">
  </Label>
  <Button text="1.  Change course name." GridPane.rowIndex="1" GridPane.columnIndex="0"
          onAction="#changeCourseName">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="2.  View the list of all professors." GridPane.rowIndex="1" GridPane.columnIndex="1"
          onAction="#viewProfs">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="3.  View the list of current sections." GridPane.rowIndex="2" GridPane.columnIndex="0"
          onAction="#viewSections">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="4.  Add a new section." GridPane.rowIndex="2" GridPane.columnIndex="1"
          onAction="#addSection">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="5.  Remove an existing section." GridPane.rowIndex="3" GridPane.columnIndex="0"
          onAction="#removeSection">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="6.  View the list of all students." GridPane.rowIndex="3" GridPane.columnIndex="1"
          onAction="#viewStus">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="7.  View the list of students in a section." GridPane.rowIndex="4" GridPane.columnIndex="0"
          onAction="#viewStusInSection">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="8.  Add one student to a section." GridPane.rowIndex="4" GridPane.columnIndex="1"
          onAction="#addStuToSection">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="9.  Add a list of students to a section." GridPane.rowIndex="5" GridPane.columnIndex="0"
          onAction="#LoadStusToSection">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="10. Remove one student from a section." GridPane.rowIndex="5" GridPane.columnIndex="1">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="11. Exit to Home Page." GridPane.rowIndex="6" GridPane.columnIndex="0"
          onAction="#backToHome">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
</GridPane>
