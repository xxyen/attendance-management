<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import java.lang.Double?>

<GridPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="edu.duke.ece651.courseManage.controller.UpdateController">
  <columnConstraints>
    <ColumnConstraints percentWidth="50.0" />
    <ColumnConstraints percentWidth="50.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints percentHeight="10.0" />
    <RowConstraints percentHeight="10.0" />
    <RowConstraints percentHeight="8.0" />
    <RowConstraints percentHeight="12.0" />
    <RowConstraints percentHeight="12.0" />
    <RowConstraints percentHeight="12.0" />
    <RowConstraints percentHeight="12.0" />
    <RowConstraints percentHeight="12.0" />
    <RowConstraints percentHeight="12.0" />
  </rowConstraints>

  <Button text="Course Management System" GridPane.rowIndex="0" GridPane.columnIndex="0"
          GridPane.columnSpan="2"
          style="-fx-font: 35px Tahoma;
                 -fx-background-color: black,#012169;
                 -fx-text-fill: ivory;">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="Update an Existing Course: Home Page" GridPane.rowIndex="1" GridPane.columnIndex="0"
          GridPane.columnSpan="2"
          style="-fx-font: 30px Tahoma;
                 -fx-background-color: black,#012169;
                 -fx-text-fill: ivory;">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="1.  Change Course Name" GridPane.rowIndex="3" GridPane.columnIndex="0"
          onAction="#changeCourseName"
          style="-fx-font: 20px Tahoma;
                 -fx-background-color: black,#778899;
                 -fx-text-fill: ivory;
                 -fx-background-radius: 10, 10;
                 -fx-background-insets: 2, 5;">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="2.  View the List of All Professors" GridPane.rowIndex="3" GridPane.columnIndex="1"
          onAction="#viewProfs"
          style="-fx-font: 20px Tahoma;
                 -fx-background-color: black,#778899;
                 -fx-text-fill: ivory;
                 -fx-background-radius: 10, 10;
                 -fx-background-insets: 2, 5;">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="3.  View the List of Current Sections" GridPane.rowIndex="4" GridPane.columnIndex="0"
          onAction="#viewSections"
          style="-fx-font: 20px Tahoma;
                 -fx-background-color: black,#778899;
                 -fx-text-fill: ivory;
                 -fx-background-radius: 10, 10;
                 -fx-background-insets: 2, 5;">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="4.  Add a New Section" GridPane.rowIndex="4" GridPane.columnIndex="1"
          onAction="#addSection"
          style="-fx-font: 20px Tahoma;
                 -fx-background-color: black,#778899;
                 -fx-text-fill: ivory;
                 -fx-background-radius: 10, 10;
                 -fx-background-insets: 2, 5;">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="5.  Remove an Existing Section" GridPane.rowIndex="5" GridPane.columnIndex="0"
          onAction="#removeSection"
          style="-fx-font: 20px Tahoma;
                 -fx-background-color: black,#778899;
                 -fx-text-fill: ivory;
                 -fx-background-radius: 10, 10;
                 -fx-background-insets: 2, 5;">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="6.  View the List of All Students" GridPane.rowIndex="5" GridPane.columnIndex="1"
          onAction="#viewStus"
          style="-fx-font: 20px Tahoma;
                 -fx-background-color: black,#778899;
                 -fx-text-fill: ivory;
                 -fx-background-radius: 10, 10;
                 -fx-background-insets: 2, 5;">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="7.  View the List of Students in a Section" GridPane.rowIndex="6" GridPane.columnIndex="0"
          onAction="#viewStusInSection"
          style="-fx-font: 20px Tahoma;
                 -fx-background-color: black,#778899;
                 -fx-text-fill: ivory;
                 -fx-background-radius: 10, 10;
                 -fx-background-insets: 2, 5;">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="8.  Add One Student to a Section" GridPane.rowIndex="6" GridPane.columnIndex="1"
          onAction="#addStuToSection"
          style="-fx-font: 20px Tahoma;
                 -fx-background-color: black,#778899;
                 -fx-text-fill: ivory;
                 -fx-background-radius: 10, 10;
                 -fx-background-insets: 2, 5;">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="9.  Add a List of Students to a Section" GridPane.rowIndex="7" GridPane.columnIndex="0"
          onAction="#loadStusToSection"
          style="-fx-font: 20px Tahoma;
                 -fx-background-color: black,#778899;
                 -fx-text-fill: ivory;
                 -fx-background-radius: 10, 10;
                 -fx-background-insets: 2, 5;">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="10. Remove One Student from a Section" GridPane.rowIndex="7" GridPane.columnIndex="1"
          onAction="#removeEnrollment"
          style="-fx-font: 20px Tahoma;
                 -fx-background-color: black,#778899;
                 -fx-text-fill: ivory;
                 -fx-background-radius: 10, 10;
                 -fx-background-insets: 2, 5;">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="11. Back to Home Page" GridPane.rowIndex="8" GridPane.columnIndex="0"
          GridPane.columnSpan="2"
          onAction="#backToHome"
          style="-fx-font: 25px Tahoma;
                -fx-background-color: black,#FA8072;
                -fx-text-fill: ivory;
                -fx-background-radius: 10, 10;
                -fx-background-insets: 2, 5;">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
</GridPane>
