<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import java.lang.Double?>

<GridPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="edu.duke.ece651.courseManage.controller.HomeController">
  <columnConstraints>
    <ColumnConstraints percentWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints percentHeight="10.0" />
    <RowConstraints percentHeight="15.0" />
    <RowConstraints percentHeight="15.0" />
    <RowConstraints percentHeight="15.0" />
    <RowConstraints percentHeight="15.0" />
    <RowConstraints percentHeight="15.0" />
    <RowConstraints percentHeight="15.0" />
  </rowConstraints>
  <Label text="Course Management System" GridPane.rowIndex="0" GridPane.columnIndex="0"
         style="-fx-font: 35px Tahoma;
                -fx-background-color: black,#012169;
                -fx-text-fill: ivory;
                -fx-background-radius: 10, 10;
                -fx-background-insets: 2, 5;">
  </Label>
  <Label text="Home Page" GridPane.rowIndex="1" GridPane.columnIndex="0"
         style="-fx-font: 50px Tahoma;
                -fx-background-color: black,#012169;
                -fx-text-fill: ivory;
                -fx-background-radius: 10, 10;
                -fx-background-insets: 2, 5;">
  </Label>
  <Button text="1.  View the List of All Courses" GridPane.rowIndex="2" GridPane.columnIndex="0"
          onAction="#viewCourses">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="2.  Add a New Course" GridPane.rowIndex="3" GridPane.columnIndex="0"
          onAction="#addCourse">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="3.  Remove an Existing Course" GridPane.rowIndex="4" GridPane.columnIndex="0"
          onAction="#removeCourse">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="4.  Update an Existing Course" GridPane.rowIndex="5" GridPane.columnIndex="0"
          onAction="#updateCourse">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="5.  Exit Course Management System" GridPane.rowIndex="6" GridPane.columnIndex="0"
          onAction="#exitSystem">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
</GridPane>
