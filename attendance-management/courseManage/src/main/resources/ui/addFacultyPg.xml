<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import java.lang.Double?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="edu.duke.ece651.courseManage.controller.AddFacultyController">
  <columnConstraints>
    <ColumnConstraints percentWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints percentHeight="10.0" />
    <RowConstraints percentHeight="10.0" />
    <RowConstraints percentHeight="10.0" />
    <RowConstraints percentHeight="10.0" />
    <RowConstraints percentHeight="10.0" />
    <RowConstraints percentHeight="10.0" />
    <RowConstraints percentHeight="10.0" />
    <RowConstraints percentHeight="10.0" />
    <RowConstraints percentHeight="10.0" />
    <RowConstraints percentHeight="10.0" />
  </rowConstraints>
  <Button text="User Management System" GridPane.rowIndex="0" GridPane.columnIndex="0"
         style="-fx-font: 35px Tahoma;
                -fx-background-color: black,#DEB887;
                -fx-text-fill: ivory;">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="Add A Faculty Member" GridPane.rowIndex="1" GridPane.columnIndex="0"
          style="-fx-font: 30px Tahoma;
                -fx-background-color: black,#DEB887;
                -fx-text-fill: ivory;">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Label text="ID:" GridPane.rowIndex="2" GridPane.columnIndex="0"
         style="-fx-font: 25px Tahoma;">
  </Label>
  <TextField fx:id="facultyIdField" promptText="Enter Faculty ID"
             GridPane.rowIndex="3" GridPane.columnIndex="0"
             style="-fx-font: 25px Tahoma;">
  </TextField>
  <Label text="Name:" GridPane.rowIndex="4" GridPane.columnIndex="0"
         style="-fx-font: 25px Tahoma;">
  </Label>
  <TextField fx:id="facultyNameField" promptText="Enter Name"
             GridPane.rowIndex="5" GridPane.columnIndex="0"
             style="-fx-font: 25px Tahoma;">
  </TextField>
  <Label text="Email:" GridPane.rowIndex="6" GridPane.columnIndex="0"
         style="-fx-font: 25px Tahoma;">
  </Label>
  <TextField fx:id="emailField" promptText="Enter Email Address"
             GridPane.rowIndex="7" GridPane.columnIndex="0"
             style="-fx-font: 25px Tahoma;">
  </TextField>
  <Button text="Create" GridPane.rowIndex="8" GridPane.columnIndex="0"
          onAction="#addFacultyButton"
          style="-fx-font: 25px Tahoma;
                 -fx-background-color: black,#778899;
                 -fx-text-fill: ivory;
                 -fx-background-radius: 10, 10;
                 -fx-background-insets: 2, 5;">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="Back To Previous Page" GridPane.rowIndex="9" GridPane.columnIndex="0"
          onAction="#backToHomePage"
          style="-fx-font: 25px Tahoma;
                 -fx-background-color: black,#FA8072;
                 -fx-text-fill: ivory;
                 -fx-background-radius: 10, 10;
                 -fx-background-insets: 2, 5;">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
</GridPane>
