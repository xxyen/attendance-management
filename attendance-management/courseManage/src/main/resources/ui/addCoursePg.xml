<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import java.lang.Double?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="edu.duke.ece651.courseManage.controller.AddCourseController">
  <columnConstraints>
    <ColumnConstraints percentWidth="15.0" />
    <ColumnConstraints percentWidth="70.0" />
    <ColumnConstraints percentWidth="15.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints percentHeight="10.0" />
    <RowConstraints percentHeight="5.0" />
    <RowConstraints percentHeight="10.0" />
    <RowConstraints percentHeight="5.0" />
    <RowConstraints percentHeight="10.0" />
    <RowConstraints percentHeight="20.0" />
    <RowConstraints percentHeight="20.0" />
    <RowConstraints percentHeight="20.0" />
  </rowConstraints>
  <Label text="Create A New Course" GridPane.rowIndex="0" GridPane.columnIndex="1">
  </Label>
  <Label text="Course ID:" GridPane.rowIndex="1" GridPane.columnIndex="1">
  </Label>
  <TextField fx:id="courseIdField" promptText="Enter Course ID"
             GridPane.rowIndex="2" GridPane.columnIndex="1">
  </TextField>
  <Label text="Course Name:" GridPane.rowIndex="3" GridPane.columnIndex="1">
  </Label>
  <TextField fx:id="courseNameField" promptText="Enter Course Name"
             GridPane.rowIndex="4" GridPane.columnIndex="1">
  </TextField>
  <Button text="Create New Course" GridPane.rowIndex="5" GridPane.columnIndex="1"
          onAction="#createCourseButton">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
  <Button text="Back to home page." GridPane.rowIndex="7" GridPane.columnIndex="1"
          onAction="#backToHome">
    <maxHeight><Double fx:constant="MAX_VALUE"/></maxHeight>
    <maxWidth><Double fx:constant="MAX_VALUE"/></maxWidth>
  </Button>
</GridPane>
