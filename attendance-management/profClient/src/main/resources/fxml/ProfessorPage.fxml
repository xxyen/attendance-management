<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.duke.ece651.profClient.controller.ProfessorPageController">
    <Label text="These are all available actions. What do you want to do?"/>
    <Button text="Start a new session and take attendance" onAction="#handleStartNewSession"/>
    <Button text="Change attendance record of a student in one session" onAction="#handleChangeAttendance"/>
    <Button text="Export attendance records of a section" onAction="#handleExportRecords"/>
    <Button text="Exit this course" onAction="#handleExit"/>
</VBox>
